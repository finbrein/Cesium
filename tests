Closures:
=========

fn b() {
   return lambda(n) { n + 1 };
}
fn b2(f, a) {
   var add1 = f();
   return add1(a);
}
b2(b, 10);

fn b() {
   return lambda(n) { n+1 };
}
var add1 = b();
add1(10);

fn b() {
   var i = 1;
   return lambda(n){ n + i };
}
var f = b();
f(10);

fn b(a) {
   var i = 1;
   return lambda(n){ n + a + i };
}
var f = b(7);
f(10);

fn b(a) {
   var i = 1;
   return lambda(n){ lambda(m) { m + n + a + i } };
}
var f = b(7);
var g = f(8);
g(10);

fn array(n) {
   var i = 0;
   var get, set;
   if (n == 1) {
      get = lambda(j, k) { i };
      set = lambda(j, k) { i = k };
   } else {
      var a = array(n - 1);
      var g = a(0), s = a(1);
      get = lambda(j, k) { if j == n then i else g(j, 0) };
      set = lambda(j, k) { if j == n then i = k else s(j, k) };
   }
   return lambda(j) { if j == 0 then get else set };
}
var A = array(100);
var g = A(0), s = A(1);
var getA = lambda(n) { g(n, 0) };
fn setA(a, b) { s(a, b); return; }
setA(10, 13);

var a = lambda(n) { n + 1 };
var b = lambda(n) { a(n) };
b(10);

tuples:
=======
var s = (2, 2);
var t = (1, 2, ("string", 1.2), s, s, s);

fn bill(n) {
   var i = (n + 1, 1);
   return lambda(s) { (i, s + 1) };
}
var k = bill(10);
k(12);

fn mulmod(a, b) {
   var (a1, a2) = a, (b1, b2) = b;
   return ((a1*b1) % a2, a2);
}
fn powmod(a, n) {
   var (a1, a2) = a;
   
   var r = (1, a2), pow = a;
   while (n != 0)
   {
       if ((n & 1) == 1) r = mulmod(r, pow);
       n >>= 1;
       if (n != 0) pow = mulmod(pow, pow);
   }
   
   return r;
}  
powmod((2, 1024), 1234);

datatypes and slots:
====================

datatype bill(a, b, c);
var s = bill(1, 2, 3);
fn k(n) { return n.a; }
k(s);
s.a;
++s.a;
s.a++;
s.a += 3;

datatype bill(a, b, c);
var s = bill(1, 2, 3);
datatype bill2(a, b, c);
var t = bill2("hello", s, 1.2);
t.b.b = 4;
fn k(n) { return n.b.b; }
k(t);

datatype bill(x, y);
fn b(n) {
   var s = bill(1, 2);
   return lambda(m) { n + m + s.x };
}
var t = b(10);
t(4);

datatype type1(a, b, c);
var s = type1(1, 2, 3);
datatype type2(a, b, c);
var t = type2("hello", s, 1.2);
fn k(n) { return n.b; }
k(t).b;

fn bill(n) { return n + 1; }
fn bill2() { return bill; }
bill2()(10);
datatype s(a, b, c);
var i = s(1, bill, 3);
i.b(10);

datatype s(a, b, c);
fn bill(n) {
   return s(1, n, 2);
}
bill(4).b = 7;

